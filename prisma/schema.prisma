generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String              @id @default(uuid())
  name        String
  slug        String              @unique
  description String?
  adminId     String
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  admin       User                @relation(fields: [adminId], references: [id], onDelete: Cascade)
  features    FeatureDefinition[]
  models      Model[]

  @@index([adminId])
}

model Settings {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  role          String     @default("admin")
  accounts      Account[]
  categories    Category[]
  models        Model[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Model {
  id                 String                @id @default(uuid())
  name               String
  description        String?
  power              String
  depth              String
  weight             String
  bucket             String
  price              String
  featured           Boolean               @default(false)
  visible            Boolean               @default(true)
  adminId            String
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  heroImageId        String?
  heroDescription    String?
  categoryId         String?               @db.VarChar(255)
  contactSubmissions ContactSubmission[]
  downloads          Download[]
  images             Image[]
  admin              User                  @relation(fields: [adminId], references: [id], onDelete: Cascade)
  category           Category?             @relation(fields: [categoryId], references: [id], onUpdate: NoAction)
  featureValues      ProductFeatureValue[]
  sections           Section[]
  accessoriesAsParent  ModelAccessory[]     @relation("ParentModel")
  accessoriesAsChild   ModelAccessory[]     @relation("AccessoryModel")

  @@index([adminId])
}

model Image {
  id        String   @id @default(uuid())
  url       String
  blurDataUrl String?
  variants  Json?
  alt       String?
  modelId   String
  createdAt DateTime @default(now())
  model     Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId])
}

model Section {
  id        String   @id @default(uuid())
  title     String
  text      String
  imageUrl  String?
  imageAlt  String?
  order     Int      @default(0)
  modelId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  model     Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId])
}

model Download {
  id        String   @id @default(cuid())
  name      String
  url       String
  fileType  String
  fileSize  Int?
  modelId   String
  createdAt DateTime @default(now())
  model     Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId])
}

model ChatSession {
  id        String        @id @default(uuid())
  userId    String?
  phone     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(uuid())
  sessionId String
  sender    String
  content   String
  delivered Boolean     @default(false)
  createdAt DateTime    @default(now())
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model FeatureDefinition {
  id                 String                @id @default(uuid())
  categoryId         String?
  key                String
  label              String
  type               String
  options            Json?
  required           Boolean               @default(false)
  order              Int                   @default(0)
  group              String?
  affectsPrice       Boolean               @default(false)
  priceModifier      Decimal?              @db.Decimal(10, 2)
  priceModifierType  String?               @default("fixed") // 'fixed' or 'percentage'
  isVariant          Boolean               @default(false)
  variantOptions     Json?
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  category           Category?             @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  productValues      ProductFeatureValue[]

  @@unique([categoryId, key])
  @@index([categoryId])
}

model ProductFeatureValue {
  id        String            @id @default(uuid())
  productId String
  featureId String
  value     Json?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  feature   FeatureDefinition @relation(fields: [featureId], references: [id], onDelete: Cascade)
  product   Model             @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, featureId])
  @@index([productId])
  @@index([featureId])
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String
  productId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  topic     String?
  product   Model?   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ModelAccessory {
  id              String @id @default(uuid())
  parentModelId   String
  accessoryModelId String
  parentModel     Model  @relation("ParentModel", fields: [parentModelId], references: [id], onDelete: Cascade)
  accessoryModel  Model  @relation("AccessoryModel", fields: [accessoryModelId], references: [id], onDelete: Cascade)

  @@unique([parentModelId, accessoryModelId])
  @@index([parentModelId])
  @@index([accessoryModelId])
}

model SectionTemplate {
  id        String   @id @default(uuid())
  name      String
  title     String?
  text      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParameterDefinition {
  id                 String                   @id @default(uuid())
  categoryId         String?
  key                String
  label              String
  type               String
  unit               String?
  options            Json?
  required           Boolean                  @default(false)
  order              Int                      @default(0)
  group              String?
  affectsPrice       Boolean                  @default(false)
  priceModifier      Decimal?                 @db.Decimal(10, 2)
  priceModifierType  String?                  @default("fixed") // 'fixed' or 'percentage'
  isVariant          Boolean                  @default(false)
  variantOptions     Json?
  isQuickSpec        Boolean                  @default(false)
  quickSpecOrder     Int                      @default(0)
  quickSpecLabel     String?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  productValues      ProductParameterValue[]

  @@unique([categoryId, key])
  @@index([categoryId])
}

model ProductParameterValue {
  id          String              @id @default(uuid())
  productId   String
  parameterId String
  value       Json?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  parameter   ParameterDefinition @relation(fields: [parameterId], references: [id], onDelete: Cascade)

  @@unique([productId, parameterId])
  @@index([productId])
  @@index([parameterId])
}
